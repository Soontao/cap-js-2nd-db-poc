{
  "name": "js-project-template",
  "version": "0.0.1",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "node --test ./test/**",
    "lint": "eslint src/** --fix",
    "release": "npx standard-version --no-verify && git push --follow-tags origin main",
    "format": "npx prettier -w src"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "@cap-js/sqlite": "^1.6.0",
    "@sap/cds": "^7.8.0",
    "@sap/cds-mtxs": "^1.17.0",
    "better-sqlite3": "^11.0.0"
  },
  "cds": {
    "requires": {
      "multitenancy": true,
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": ".dev-main.db"
        }
      },
      "db2": {
        "kind": "sqlite",
        "credentials": {
          "database": ".dev-2nd.db"
        }
      }
    }
  }
}
